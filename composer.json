{
    "name": "Blog Challenge",
    "description": "A Slim Framework skeleton application for rapid development",
    "license": "MIT",
    "authors": [
        {
            "name": "Eduardo Augusto",
            "email": "duuh-l@hotmail.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "doctrine/orm": "^2",
        "vlucas/valitron": "^1.4",
        "vlucas/phpdotenv": "^3.3",
        "tuupola/slim-jwt-auth": "^3.1",
        "tuupola/cors-middleware": "^0.9.3",
        "firebase/php-jwt": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "BLOG\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
